//ciclo infinito
Mientras h>= 0 Hacer
	FinMientras


// termina en -1
Mientras h>= 0 Hacer
		h = h -1;
	FinMientras

//limpia la pantalla cuando es verdadero
// cuando es falso -1 imprime un -1
	Mientras s>= 0 Hacer
	    Limpiar Pantalla;
		s = s-1;
		escribir s;
	FinMientras
	
 
